<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/teamColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="Background" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Text" parent="Wrap">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Checkbox" parent="Wrap">
        <item name="android:buttonTint">@color/fieldDefault</item>
    </style>

    <style name="Dropdown" parent="Wrap">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="RadioButton" parent="Wrap">
        <item name="android:buttonTint">@color/fieldDefault</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="EditText" parent="Wrap">
        <item name="android:textColorHint">@color/hintText</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">36sp</item>
        <item name="android:backgroundTint">@color/primaryText</item>
    </style>

    <style name="TitleText" parent="Wrap">
        <item name="android:textColor">@color/teamColor</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="PageButton" parent="Wrap">
        <item name="android:textSize">36sp</item>
    </style>

</resources>
