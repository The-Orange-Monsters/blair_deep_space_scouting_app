<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="frc.team449.scoutingappframe.FixErrors"
    style="@style/Background">

    <!--Match Title-->
    <TextView
        style="@style/TitleText"
        android:id="@+id/matchTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="8dp"
        android:text="Match " />

    <!--Team Title-->
    <TextView
        style="@style/TitleText"
        android:id="@+id/teamTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/startMargin"
        android:layout_marginTop="8dp"
        android:text="Team " />

    <!--Error Text-->
    <TextView
        style="@style/Text"
        android:id="@+id/errors"
        android:layout_marginStart="@dimen/startMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/matchTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!--Fix Errors Button-->
    <Button
        style="@style/PageButton"
        android:id="@+id/goToPrematch"
        android:layout_marginBottom="8dp"
        android:onClick="goToPrematch"
        android:text="Fix Errors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>