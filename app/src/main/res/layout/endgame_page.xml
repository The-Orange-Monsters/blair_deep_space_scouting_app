            android:layout_height="wrap_content"
            android:text="None" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptLevelOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptLevelTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptLevelThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

    </RadioGroup>

