<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Background">

    <!--Habitat Attempt Level Text-->
    <TextView
        style="@style/Text"
        android:text="Habitat Level Attempted"
        android:id="@+id/attemptLevelText"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/matchTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!--Habitat Attempt Level Radio Group-->
    <RadioGroup
        style="@style/Wrap"
        android:id="@+id/attemptLevel"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/attemptLevelText">

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptLevelNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptLevelOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptLevelTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptLevelThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

    </RadioGroup>

    <!--Attempt Success Text-->
    <TextView
        style="@style/Text"
        android:text="Attempt Success"
        android:id="@+id/attemptSuccessText"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        app:layout_constraintTop_toBottomOf="@id/attemptLevel"
        app:layout_constraintStart_toStartOf="parent" />

    <!--Attempt Success-->
    <RadioGroup
        style="@style/Wrap"
        android:id="@+id/attemptSuccess"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/attemptSuccessText">

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptSuccessNA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptSuccessFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fail" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/attemptSuccessSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success" />

    </RadioGroup>

    <!--Habitat Level Reached Text-->
    <TextView
        style="@style/Text"
        android:text="Habitat Level Reached"
        android:id="@+id/levelReachedText"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        app:layout_constraintTop_toBottomOf="@id/attemptSuccess"
        app:layout_constraintStart_toStartOf="parent" />

    <!--Habitat Level Reached Radio Group-->
    <RadioGroup
        style="@style/Wrap"
        android:id="@+id/levelReached"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/levelReachedText">

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/levelReachedNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/levelReachedOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/levelReachedTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/levelReachedThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

    </RadioGroup>

    <!--Comments Text-->
    <TextView
        style="@style/Text"
        android:text="Additional Comments"
        android:id="@+id/commentsText"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        app:layout_constraintTop_toBottomOf="@id/levelReached"
        app:layout_constraintStart_toStartOf="parent" />

    <!--Comments-->
    <EditText
        style="@style/TextBox"
        android:id="@+id/comments"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        android:hint="Comments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentsText"/>

</android.support.constraint.ConstraintLayout>